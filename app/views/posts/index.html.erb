
<body>

    <div class="container">
        <h1>User's Contact Info</h1>
    <div class="table_list">
      <table>
        <thead>
        <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email Address</th>
        <th>Address</th>
        <th>Contact Number</th>
        <th>Comment Counts</th>
        <th>Category</th>
        <th colspan="3">Option</th>
        <th colspan="2">Comment Section</th>
        <th>USER</th>
        </tr>
        </thead>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.fname %></td>
            <td><%= post.lname %></td>
            <td><%= post.email %></td>
            <td><%= post.address %></td>
            <td><%= post.cnum %></td>
            <td><%= post.comments_count %></td>
            <td><%= post.categories.pluck(:name).join(',') %></td>
            <td><%= link_to 'Show', post_path(post), class: 'btn-list' %></td>
            <td><%= link_to 'Edit', edit_post_path(post), class: 'btn-list' if post.user == current_user  %></td>
            <td><%= button_to 'X', post_path(post), method: :delete, class: 'btn-delete'  if post.user == current_user%></td>
            <td><%= link_to 'comments', post_comments_path(post), class: 'btn-list' %></td>
            <td><%= link_to 'new comment', new_post_comment_path(post), class: 'btn-list' %></td>
            <td><%= post.user&.email %></td>
          </tr>
        <% end %>
      </table>
      </div>
    </div>

<div class="btn-standard">
  <%= link_to 'Create new Contact Information', new_post_path %>
</div>

</body>



