<h1>Title <%= @post.fname %></h1>

<h2>Comments</h2>

<ul>

  <% @comments.each do |comment| %>

    <li><%= comment.content %>(<%= comment.created_at %>)by <%= comment.user.email %></li>
    <li><%= link_to 'edit', edit_post_comment_path(@post, comment) %></li>
    <li><%= button_to 'delete', post_comment_path(@post, comment), method: :delete %></li>
  <% end %>

</ul>




