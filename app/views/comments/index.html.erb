<h1><%= @post.fname %>'s Recent Comment</h1>




  <% @comments.each do |comment| %>
  <h2></h2>
    <table>
      <thead>
      <tr>
        <th colspan="3"> <li><%= comment.content %>(<%= comment.created_at %>)by <%= comment.user.email %></li></th>
      </tr>
      </thead>
      <tr>
        <td><%= link_to 'edit', edit_post_comment_path(@post, comment), class: "btn-list" %></td>
        <td><%= button_to 'X', post_comment_path(@post, comment), class: "btn-delete", method: :delete %></td>
        <td><%= link_to "Back", posts_path(@post), class: "btn-list" %></td>
      </tr>
    </table>
  <% end %>


<div class="btn-standard">
  <%= link_to 'Create New Comment', new_post_comment_path(@post)%>
</div>


